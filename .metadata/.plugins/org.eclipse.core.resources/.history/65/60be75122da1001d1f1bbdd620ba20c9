package cls;

import java.util.Date;

import lombok.Getter;
import lombok.Setter;
import lombok.ToString;

//클래스

@Getter
@Setter
@ToString
public class Item {

	private long no = 0L; // ㅁㄹ품번호
	private String name = null; // 물품명
	private String content = null; // 물품내용
	private int price = 0; // 물품가격
	private long quantity = 0L; // 수량
	private Date date = null;

	// getter / setter / toString()이 추가되어있는것과 같음.

	// 메소드 == 함수 (특정한 기능을 구현)
	public void discountPrice( float per ) {
		this.quantity = (int) (this.quantity - (this.quantity * per));
		// 현재가격에서 per만큼 빼야됨.
		// 변수, 조건문, 반복문, 배열...
	}
}
